<div class="col-md-12">
  <%= link_to("Add a job", new_job_path, class: "btn btn-primary pull-right") %>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>职缺</th>
        <th>薪资下限</th>
        <th>薪资上限</th>
        <th>发布时间</th>
      </tr>
    </thead>
    <tbody>
      <% @jobs.each do |job| %>
        <tr>
            <td><%= link_to(job.title, job_path(job)) %></td>
            <td><%= job.wage_lower_bound %></td>
            <td><%= job.wage_upper_bound %></td>
            <td><%= job.updated_at %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
